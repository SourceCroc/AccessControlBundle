{
    "name": "sourcecroc/access-control-bundle",
    "description": "Permission and Role based Access Control bundle by SourceCroc",
    "type": "symfony-bundle",
    "license": "proprietary",
    "authors": [
        {
            "name": "SourceCroc",
            "email": "info@sourcecroc.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "SourceCroc\\AccessControlBundle\\": "src/",
            "SourceCroc\\Helpers\\": "helpers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SourceCroc\\AccessControlBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "php -d memory_limit=-1 vendor/bin/phpcs -s .",
        "test": "php -d memory_limit=-1 vendor/bin/phpunit"
    },
    "require": {
        "php": "^8.1",
        "symfony/framework-bundle": ">=6.0.0",
        "symfony/security-bundle": "^6.0",
        "symfony/orm-pack": "^2.2"
    },
    "require-dev": {
        "sourcecroc/php-code-style": "^0.1.4",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/test-pack": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
